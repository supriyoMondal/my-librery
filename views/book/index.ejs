<h2 class="page-header">Search Books</h2>
<form action="/book" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" <% if(typeof searchParams.title != 'undefined')  {%> value="<%= searchParams.title %>"
                <% } %> name="title" id="title">
        </div>
    </div>

    <div class="form-row-books">
        <div class="form-item">
            <label for="publishedAfter">Publish After</label>
            <input type="date" <% if(typeof searchParams.publishedAfter != 'undefined')  {%>
                value="<%= searchParams.publishedAfter %>" <% } %> name="publishedAfter" id="publishedAfter">
        </div>
        <div class="form-item">
            <label for="publishedBefore">Publish Before</label>
            <input type="date" <% if(typeof searchParams.publishedBefore != 'undefined')  {%>
                value="<%= searchParams.publishedBefore %>" <% } %> name="publishedBefore" id="publishedBefore">
        </div>
    </div>
    <div class="button-row form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>

    </div>
</form>
<br>
<div>
    <%- include('../parcels/_bookGrid',{
        books : books,large:false
    })  %>
</div>