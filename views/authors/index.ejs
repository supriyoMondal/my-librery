<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" required <% if(typeof name != 'undefined')  {%> value="<%= name %>" <% } %> name="name"
        id="name">
    <button type="submit">Search</button>
</form>
<br>
<% if (typeof authors != 'undefined' ) { %>
<% authors.forEach( author => { %>
<div><%= author.name  %> </div>
<a href="/authors/<%= author._id %> ">View</a>
<a href="/authors/<%= author._id %>/edit">Edit</a>

<%- include('../parcels/_delete-form',{url:`/authors/${author.id}`}) %>

<%  } )  %>
<% } %>