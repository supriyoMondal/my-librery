<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" required <% if(typeof name != 'undefined')  {%> value="<%= name %>" <% } %> name="name"
        id="name">
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>
<% if (typeof authors != 'undefined' ) { %>
<% authors.forEach( author => { %>
<div><%= author.name  %> </div>
<div class="button-row">
    <a class="btn btn-primary" href="/authors/<%= author._id %> ">View</a>
    <a class="btn btn-primary" href="/authors/<%= author._id %>/edit">Edit</a>

    <%- include('../parcels/_delete-form',{url:`/authors/${author.id}`}) %>
</div>

<%  } )  %>
<% } %>